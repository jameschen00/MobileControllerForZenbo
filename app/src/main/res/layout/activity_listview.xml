<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingBottom="20dp">

        <Button
            android:id="@+id/broadcastEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@+id/listInfo" android:text="Broadcast Event"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/listInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/broadcastEvent"
            android:layout_alignBottom="@+id/broadcastEvent" android:layout_alignParentStart="true"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/setRandomFace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/setRandomHead"
            android:padding="15dp" android:text="setRandomFace"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/setLED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/setRandomFace"
            android:layout_below="@+id/setRandomHead"
            android:padding="15dp"
            android:text="setLED"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/setRandomHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp" android:text="setRandomHead"
            android:layout_alignBaseline="@+id/broadcastEvent"
            android:layout_alignBottom="@+id/broadcastEvent" android:layout_alignParentEnd="true"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/watiTime"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textSize="25dp" android:layout_alignBaseline="@+id/setLED"
            android:layout_alignBottom="@+id/setLED" android:layout_alignParentStart="true"
            android:layout_width="100dp"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
