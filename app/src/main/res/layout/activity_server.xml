<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/ipAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Server ip Address"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btn_case1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="20dp"
            android:text="@string/walking_talking" />

        <Button
            android:id="@+id/btn_case2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_case1"
            android:layout_marginTop="25dp"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:textSize="20dp"
            android:text="@string/stage_control" />

        <Button
            android:id="@+id/btn_case3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_case2"
            android:layout_marginTop="25dp"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:textSize="20dp"
            android:text="Sync Time and Open Zba" />

    </RelativeLayout>


</LinearLayout>